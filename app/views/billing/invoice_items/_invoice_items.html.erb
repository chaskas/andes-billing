
<% unless notice.blank? %>
  <div class="alert alert-success mt-3" role="alert">
    <%= notice %>
  </div>
<% end %>

<% content_for :title, "Invoice items" %>

<table class="table table-hover">
  <thead>
  <tr>
    <th scope="col">Date</th>
    <th scope="col">Duration</th>
    <th scope="col">Type</th>
    <th scope="col">Amount</th>
    <th scope="col">Unit Price</th>
    <th scope="col">Options</th>
  </tr>
  </thead>
  <tbody>
  <p class="text-center">
    No invoices items found.
  </p>

    <% invoice_items.each do |item| %>
      <tr>
        <th class="text-center"><%= item.date&.to_fs(:day_month_year) %></th>
        <td class="text-center"><%= item.duration %></td>
        <td class="text-center"><%= item.kind %></td>
        <td class="text-end"><%=number_to_currency(item.unit_price, unit: "â‚¬", separator: ",", delimiter: ".")%></td>
        <td class="text-center">
          <div class="d-inline-flex">
            <%= button_to "", invoice_invoice_item_path(item.invoice, item), method: :delete, class: "btn btn-sm btn-danger bi bi-trash" %>
          </div>
        </td>
      </tr>
    <% end %>

    </tbody>
  </table>
<% end %>